<h1>Ideas</h1>

   
<% @ideas.in_groups_of(3).each do |group| %>
  <div class="row">
    <% group.compact.each do |idea| %>
      <div class="col-md-4">
        <%= image_tag idea.picture, width: '70%' if idea.picture.present? %>
        <h4><%= link_to idea.name, idea %></h4>
        <%= idea.content %>
      </div>
    <% end %>
  </div>
<% end %>